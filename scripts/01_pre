function f_pre {
  SCRIPT_COUNT="0"
  ((SCRIPT_COUNT++))

  export TERM=linux
  export DEBIAN_FRONTEND=noninteractive

  if [[ $VERBOSE == "Y" ]]; then
    APTFLAGS='--assume-yes'
  else
    APTFLAGS='-qq --assume-yes'
  fi

  if [ $EUID -ne 0 ]; then
    echo "Not root or not enough privileges. Exiting."
    echo
    exit 1
  fi

  if ! lsb_release -i | grep 'Ubuntu'; then
    echo "Ubuntu only. Exiting."
    echo
    exit 1
  fi
}
